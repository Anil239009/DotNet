@using BOL;

@{
    ViewData["Title"] = "Edit Page";
}

<h1>New Employee Details</h1>

 <form method="post" asp-controller="Employees" asp-action="Edit">
    <label>Id:</label>
    @* <Label>@Model.Id</Label> *@
    <input type="text" name="Id"  value="@Model.Id"/>
    <br />
    <label>First Name:</label>
    <input type="text" name="FirstName" value="@Model.FirstName" />
    <br />
    <label>Last Name:</label>
    <input type="text" name="LastName" value="@Model.LastName" />
    <br />
    <label>Email:</label>
    <input type="text" name="Email" value="@Model.Email" />
    <br />
    <label>Address:</label>
    <input type="text" name="Address" value="@Model.Address" />
    <button type="submit">Update</button>
</form>
